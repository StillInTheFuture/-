/* pages/detail/detail.wxss */
.container{
	padding-bottom: 30px;
}
.part{
  width: 310px;
  height: auto;
}
.name{
  margin:20px 0;
  width: 100%;
  border-bottom: 1px solid #d9d9d9;
}
.name text{
	font-size: 16px;
	margin-bottom: 10px;
	border-bottom: 2px solid #4877ed;
	color: #4877ed;
}



.detail{
  font-size: 16px;
}
.list{
    display: flex;
    margin-bottom: 10px;
}
.list text{
	width: 25%;
	height: 28px;
	line-height: 28px;
	font-size: 14px;
	text-align: right;
}
.list input[type="text"]{
	margin-left: 4%;
	padding-left: 2%;
	width: 63%;
	height: 26px;
  	border: 1px solid #e1e1e1;
  	font-size: 14px;
  	border-radius: 5px;
}
.list textarea{
	margin-left: 4%;
	padding:10px 2%;
	width: 61%;
	height: 100px;
  	border: 1px solid #e1e1e1;
  	font-size: 14px;
  	border-radius: 5px;
}

