/* pages/setting/setting.wxss */

form{
  margin-top:20px;
  width: 310px;
}
.pic{
	width: 100%;
	text-align: center;
}
.pic image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.section{
  margin:10px auto 0;
  width:90%;
  height:40px;
  line-height: 40px;
}
.section >text{
  width:25%;
  height:100%;
  float: left;
  font-size: 14px;
}
.section input{
  z-index: 1;
  width:73%;
  height:39px;
  float: left;
  padding-left: 2%;
  font-size: 14px;
  border-bottom:1px solid #e1e1e1;
}
.button{
  margin: 30px auto;
  text-align: center;
}
.button button{
  display: inline-block;
	width: 30%;
	height: 36px;
	line-height: 36px;
  border:1px solid #4877ed;
  background: #fff;
  color: #4877ed;
  font-size: 16px;
  margin-right: 30px;
}
/*下拉列表*/
.select_con{
  position: relative;
  font-size: 14px;
}
.select_box{
  position: absolute;
  top: 40px;
  left: 25%;
  z-index: 9;
  width: 75%;
  background-color: #f1f1f1;
  max-height: 300rpx;
  overflow-y:auto;
}
.select_one {
  padding-left: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  /*max-height: */
}

.alter_btn{
	width:150px;
	height:36px;
	line-height:36px;
	text-align: center;
	border:1px solid #4877ed;
	border-radius: 5px;
	background:#fff;
	color:#4877ed;
	font-size: 16px;
}
.alter_btn image{
	width: 40rpx;
	height: 40rpx;
	position: relative;
	top: 3px;
}