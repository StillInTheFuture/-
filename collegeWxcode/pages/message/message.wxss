/* pages/message/message.wxss */
.message{
	margin-top: 30px;
	width: 310px;
	border:1px solid #d9d9d9;
	border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
    padding:14px 10px;
}
.name{
	text-align: center;
	font-size:16px;
	color:#4877ed;
}
.content{
	font-size: 14px;
	color: #999;
	margin:6px 0;
}
.date{
	font-size: 12px;
	color:#999;
	float: right;
}
.nomess{
	padding:15px 0;
	font-size: 14px;
}